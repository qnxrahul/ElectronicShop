<Window x:Class="ElectronicShop.Accounting.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Electronic Shop Accounting"
        Width="1440"
        Height="920"
        MinWidth="1200"
        MinHeight="760"
        WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource AppFontFamily}"
        Background="{StaticResource AppBackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="262" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="{StaticResource SidebarBrush}">
            <DockPanel>
                <Border DockPanel.Dock="Top"
                        Height="70"
                        BorderBrush="#2D3239"
                        BorderThickness="0,0,0,1"
                        Padding="22,0">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Border Width="28"
                                Height="28"
                                CornerRadius="6"
                                Background="#EAEAEA" />
                        <TextBlock Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="#EAEAEA"
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   Text="LOGO" />
                    </StackPanel>
                </Border>

                <ListBox Margin="10,14,10,16"
                         ItemsSource="{Binding NavigationItems}"
                         SelectedItem="{Binding SelectedNavigationItem}"
                         BorderThickness="0"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="20"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="15"
                                           Foreground="#F3F3F3"
                                           Text="{Binding Glyph}" />
                                <TextBlock Margin="10,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="#F3F3F3"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Text="{Binding Label}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Margin" Value="0,4,0,0" />
                            <Setter Property="Padding" Value="12,12" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="ItemBorder"
                                                Background="Transparent"
                                                CornerRadius="10"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#242931" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#2C3139" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="74" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="#F4F5F7"
                    BorderBrush="#E7E8EC"
                    BorderThickness="0,0,0,1"
                    Padding="24,14">
                <DockPanel LastChildFill="False">
                    <StackPanel DockPanel.Dock="Right"
                                Orientation="Horizontal">
                        <Border Width="250"
                                Height="38"
                                CornerRadius="8"
                                Background="#ECEDEF"
                                BorderBrush="#E1E2E5"
                                BorderThickness="1">
                            <DockPanel VerticalAlignment="Center"
                                       Margin="10,0">
                                <TextBlock DockPanel.Dock="Left"
                                           VerticalAlignment="Center"
                                           Foreground="#7C818B"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="12"
                                           Text="&#xE721;" />
                                <TextBox Margin="8,0,0,0"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         FontSize="13"
                                         VerticalAlignment="Center"
                                         Text="{Binding GlobalSearchText, UpdateSourceTrigger=PropertyChanged}" />
                            </DockPanel>
                        </Border>

                        <Button Width="34"
                                Height="34"
                                Margin="12,2,0,0"
                                Background="Transparent"
                                BorderThickness="0"
                                ToolTip="Notifications">
                            <TextBlock VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="14"
                                       Foreground="#61656F"
                                       Text="&#xE7ED;" />
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>

            <ContentControl Grid.Row="1"
                            Margin="14"
                            Content="{Binding CurrentPage}" />
        </Grid>
    </Grid>
</Window>
