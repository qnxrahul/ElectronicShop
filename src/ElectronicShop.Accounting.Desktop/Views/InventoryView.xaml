<UserControl x:Class="ElectronicShop.Accounting.Desktop.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="6">
            <StackPanel>
                <TextBlock Style="{StaticResource PageTitleStyle}"
                           Text="Inventory &amp; Services" />
                <TextBlock Margin="0,4,0,16"
                           Style="{StaticResource PageSubtitleStyle}"
                           Text="Manage stock, categories and inventory valuation" />

                <ItemsControl ItemsSource="{Binding OverviewCards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,10,12"
                                    Style="{StaticResource SurfaceCardStyle}"
                                    Background="{Binding AccentColor}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="#56606F"
                                                   Text="{Binding Title}" />
                                        <TextBlock Margin="0,10,0,0"
                                                   FontWeight="Bold"
                                                   FontSize="34"
                                                   Text="{Binding DisplayValue}" />
                                    </StackPanel>
                                    <Border Grid.Column="1"
                                            Width="34"
                                            Height="34"
                                            Background="#F8F9FB"
                                            CornerRadius="8">
                                        <TextBlock HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="16"
                                                   Text="{Binding IconGlyph}" />
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <DockPanel Margin="0,0,0,12"
                           LastChildFill="False">
                    <StackPanel DockPanel.Dock="Left"
                                Orientation="Horizontal">
                        <Border Width="380"
                                Height="40"
                                CornerRadius="20"
                                Background="#FFFFFF"
                                BorderBrush="#DEE2E8"
                                BorderThickness="1">
                            <DockPanel Margin="12,0">
                                <TextBlock VerticalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"
                                           Foreground="#81868F"
                                           Text="&#xE721;" />
                                <TextBox Margin="8,0,0,0"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                            </DockPanel>
                        </Border>

                        <ComboBox Width="140"
                                  Height="40"
                                  Margin="10,0,0,0"
                                  VerticalContentAlignment="Center"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="All Categories" />
                            <ComboBoxItem Content="LED &amp; Lighting" />
                        </ComboBox>

                        <ComboBox Width="120"
                                  Height="40"
                                  Margin="10,0,0,0"
                                  VerticalContentAlignment="Center"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="All Status" />
                            <ComboBoxItem Content="Good" />
                            <ComboBoxItem Content="Low" />
                            <ComboBoxItem Content="Critical" />
                        </ComboBox>
                    </StackPanel>

                    <Button DockPanel.Dock="Right"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Padding="16,10"
                            Command="{Binding OpenAddProductCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" />
                            <TextBlock Margin="8,0,0,0" Text="Add Item" />
                        </StackPanel>
                    </Button>
                </DockPanel>

                <Border Style="{StaticResource SurfaceCardStyle}">
                    <DataGrid Style="{StaticResource DataGridStyle}"
                              IsReadOnly="True"
                              ItemsSource="{Binding InventoryItems}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="S.No" Binding="{Binding SNo}" Width="0.6*" />
                            <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="0.9*" />
                            <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="1.2*" />
                            <DataGridTextColumn Header="Categories" Binding="{Binding Category}" Width="1.3*" />
                            <DataGridTextColumn Header="HSN" Binding="{Binding Hsn}" Width="0.9*" />
                            <DataGridTextColumn Header="Purchase Price" Binding="{Binding PurchasePrice, StringFormat={}{0:C0}}" Width="1*" />
                            <DataGridTextColumn Header="Selling Price" Binding="{Binding SellingPrice, StringFormat={}{0:C0}}" Width="1*" />
                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="0.8*" />
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="0.8*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Background="#77000000"
                Visibility="{Binding IsAddProductOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Width="720"
                    Padding="24"
                    CornerRadius="12"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Background="#FFFFFF">
                <StackPanel>
                    <DockPanel>
                        <TextBlock FontSize="32"
                                   FontWeight="Bold"
                                   Text="Add New Product" />
                        <Button DockPanel.Dock="Right"
                                Width="32"
                                Height="32"
                                FontSize="14"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding CloseAddProductCommand}"
                                Content="âœ•" />
                    </DockPanel>

                    <TextBlock Margin="0,16,0,4" Text="Item Name" />
                    <TextBox Text="{Binding NewProductName, UpdateSourceTrigger=PropertyChanged}" />

                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Category" />
                            <TextBox Margin="0,4,0,0"
                                     Text="{Binding NewCategory, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Product Code" />
                            <TextBox Margin="0,4,0,0"
                                     Text="{Binding NewProductCode, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Purchase Price (ZAR)" />
                            <TextBox Margin="0,4,0,0"
                                     Text="{Binding NewPurchasePrice, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Sales Price (ZAR)" />
                            <TextBox Margin="0,4,0,0"
                                     Text="{Binding NewSalesPrice, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Opening Stock" />
                            <TextBox Margin="0,4,0,0"
                                     Text="{Binding NewOpeningStock, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Reorder Level" />
                            <TextBox Margin="0,4,0,0"
                                     Text="{Binding NewReorderLevel, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <DockPanel Margin="0,18,0,0">
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="16,10"
                                Command="{Binding SaveProductCommand}"
                                Content="Save Product" />
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource OutlineButtonStyle}"
                                Padding="16,10"
                                Margin="0,0,8,0"
                                Command="{Binding CloseAddProductCommand}"
                                Content="Cancel" />
                    </DockPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
