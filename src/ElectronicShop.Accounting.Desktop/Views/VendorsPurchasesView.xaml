<UserControl x:Class="ElectronicShop.Accounting.Desktop.Views.VendorsPurchasesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="6">
            <StackPanel>
                <TextBlock Style="{StaticResource PageTitleStyle}"
                           Text="{Binding PageTitle}" />
                <TextBlock Margin="0,4,0,16"
                           Style="{StaticResource PageSubtitleStyle}"
                           Text="Manage bills and create purchase entries" />

                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,14">
                    <Button Content="Vendors"
                            Command="{Binding SelectVendorsCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource TabButtonStyle}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Vendors">
                                        <Setter Property="Background" Value="#16191E" />
                                        <Setter Property="Foreground" Value="#FFFFFF" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Purchase Invoice"
                            Command="{Binding SelectPurchaseInvoiceCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource TabButtonStyle}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Purchase Invoice">
                                        <Setter Property="Background" Value="#16191E" />
                                        <Setter Property="Foreground" Value="#FFFFFF" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Purchase Return"
                            Command="{Binding SelectPurchaseReturnCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource TabButtonStyle}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Purchase Return">
                                        <Setter Property="Background" Value="#16191E" />
                                        <Setter Property="Foreground" Value="#FFFFFF" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Pay Bills"
                            Command="{Binding SelectPayBillsCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource TabButtonStyle}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Pay Bills">
                                        <Setter Property="Background" Value="#16191E" />
                                        <Setter Property="Foreground" Value="#FFFFFF" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <DockPanel Margin="0,0,0,12"
                           LastChildFill="False">
                    <StackPanel DockPanel.Dock="Left"
                                Orientation="Horizontal">
                        <Border Width="380"
                                Height="40"
                                CornerRadius="20"
                                Background="#FFFFFF"
                                BorderBrush="#DEE2E8"
                                BorderThickness="1">
                            <DockPanel Margin="12,0">
                                <TextBlock VerticalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"
                                           Foreground="#81868F"
                                           Text="&#xE721;" />
                                <TextBox Margin="8,0,0,0"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                            </DockPanel>
                        </Border>

                        <ComboBox Width="90"
                                  Height="40"
                                  Margin="10,0,0,0"
                                  VerticalContentAlignment="Center"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="All" />
                        </ComboBox>

                        <Button Width="40"
                                Height="40"
                                Margin="10,0,0,0"
                                Style="{StaticResource OutlineButtonStyle}"
                                Content="&#xE72C;"
                                FontFamily="Segoe MDL2 Assets" />
                    </StackPanel>

                    <Button DockPanel.Dock="Right"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Padding="16,10"
                            Command="{Binding OpenPrimaryActionCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" />
                            <TextBlock Margin="8,0,0,0" Text="{Binding PrimaryActionText}" />
                        </StackPanel>
                    </Button>
                </DockPanel>

                <Border Style="{StaticResource SurfaceCardStyle}">
                    <Grid>
                        <Border>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedTab}" Value="Vendors">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <DataGrid Style="{StaticResource DataGridStyle}"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding Vendors}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="S.No" Binding="{Binding SNo}" Width="0.6*" />
                                    <DataGridTextColumn Header="Vendor Name" Binding="{Binding VendorName}" Width="1.2*" />
                                    <DataGridTextColumn Header="Company Name" Binding="{Binding CompanyName}" Width="1.3*" />
                                    <DataGridTextColumn Header="Phone No." Binding="{Binding PhoneNumber}" Width="1*" />
                                    <DataGridTextColumn Header="E-mail" Binding="{Binding EmailAddress}" Width="1.2*" />
                                    <DataGridTextColumn Header="Outstanding Balance" Binding="{Binding OutstandingBalance, StringFormat={}{0:C0}}" Width="1.2*" />
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="0.8*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>

                        <Border>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedTab}" Value="Purchase Invoice">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <DataGrid Style="{StaticResource DataGridStyle}"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding PurchaseInvoices}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="S.No" Binding="{Binding SNo}" Width="0.6*" />
                                    <DataGridTextColumn Header="PO Number" Binding="{Binding PONumber}" Width="1.2*" />
                                    <DataGridTextColumn Header="Vendor Name" Binding="{Binding VendorName}" Width="1.2*" />
                                    <DataGridTextColumn Header="Total Product" Binding="{Binding TotalProduct}" Width="0.9*" />
                                    <DataGridTextColumn Header="Total Quantity" Binding="{Binding TotalQuantity}" Width="1*" />
                                    <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat={}{0:C0}}" Width="1*" />
                                    <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" Width="1*" />
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="0.9*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>

                        <Border>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedTab}" Value="Purchase Return">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <DataGrid Style="{StaticResource DataGridStyle}"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding PurchaseReturns}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="S.No" Binding="{Binding SNo}" Width="0.6*" />
                                    <DataGridTextColumn Header="PO Number" Binding="{Binding PONumber}" Width="1.2*" />
                                    <DataGridTextColumn Header="Vendor Name" Binding="{Binding VendorName}" Width="1.2*" />
                                    <DataGridTextColumn Header="Purchased Qty" Binding="{Binding PurchasedQuantity}" Width="1*" />
                                    <DataGridTextColumn Header="Return Qty" Binding="{Binding ReturnQuantity}" Width="0.9*" />
                                    <DataGridTextColumn Header="Return Total" Binding="{Binding ReturnTotal, StringFormat={}{0:C0}}" Width="1*" />
                                    <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" Width="1*" />
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="0.9*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>

                        <Border>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedTab}" Value="Pay Bills">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <DataGrid Style="{StaticResource DataGridStyle}"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding PayBills}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="S.No" Binding="{Binding SNo}" Width="0.6*" />
                                    <DataGridTextColumn Header="PO Number" Binding="{Binding PONumber}" Width="1.2*" />
                                    <DataGridTextColumn Header="Vendor Name" Binding="{Binding VendorName}" Width="1.2*" />
                                    <DataGridTextColumn Header="Payment Status" Binding="{Binding PaymentStatus}" Width="1*" />
                                    <DataGridTextColumn Header="Paid Amount" Binding="{Binding PaidAmount, StringFormat={}{0:C0}}" Width="1*" />
                                    <DataGridTextColumn Header="Pending Amount" Binding="{Binding PendingAmount, StringFormat={}{0:C0}}" Width="1*" />
                                    <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat={}{0:C0}}" Width="1*" />
                                    <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate}" Width="1*" />
                                    <DataGridTextColumn Header="Last Payment Date" Binding="{Binding LastPaymentDate}" Width="1*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Background="#77000000"
                Visibility="{Binding IsAddVendorOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Width="760"
                    Padding="22"
                    CornerRadius="12"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Background="#FFFFFF">
                <StackPanel>
                    <DockPanel>
                        <TextBlock FontSize="30"
                                   FontWeight="Bold"
                                   Text="Add New Vendor" />
                        <Button DockPanel.Dock="Right"
                                Width="32"
                                Height="32"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding CloseAddVendorCommand}"
                                Content="✕" />
                    </DockPanel>

                    <Grid Margin="0,14,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Vendor Name" />
                            <TextBox Margin="0,4,0,0" Text="{Binding VendorNameInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Company Name" />
                            <TextBox Margin="0,4,0,0" Text="{Binding VendorCompanyInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Email Address" />
                            <TextBox Margin="0,4,0,0" Text="{Binding VendorEmailInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Phone Number" />
                            <TextBox Margin="0,4,0,0" Text="{Binding VendorPhoneInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <TextBlock Margin="0,12,0,4" Text="Address" />
                    <TextBox Height="58"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Text="{Binding VendorAddressInput, UpdateSourceTrigger=PropertyChanged}" />

                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Account Name" />
                            <TextBox Margin="0,4,0,0" Text="{Binding VendorAccountNameInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Account Number" />
                            <TextBox Margin="0,4,0,0" Text="{Binding VendorAccountNumberInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <DockPanel Margin="0,16,0,0">
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="16,10"
                                Content="Save Vendor"
                                Command="{Binding SaveVendorCommand}" />
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource OutlineButtonStyle}"
                                Padding="16,10"
                                Margin="0,0,8,0"
                                Content="Cancel"
                                Command="{Binding CloseAddVendorCommand}" />
                    </DockPanel>
                </StackPanel>
            </Border>
        </Border>

        <Border Background="#77000000"
                Visibility="{Binding IsPurchaseInvoiceOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Width="900"
                    Padding="22"
                    CornerRadius="12"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Background="#FFFFFF">
                <StackPanel>
                    <DockPanel>
                        <TextBlock FontSize="30"
                                   FontWeight="Bold"
                                   Text="Create Purchase Invoice" />
                        <Button DockPanel.Dock="Right"
                                Width="32"
                                Height="32"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding ClosePurchaseInvoiceCommand}"
                                Content="✕" />
                    </DockPanel>

                    <Grid Margin="0,14,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Vendor" />
                            <TextBox Margin="0,4,0,0" Text="{Binding PurchaseVendorNameInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,8,0">
                            <TextBlock Text="Purchase Date" />
                            <TextBox Margin="0,4,0,0" Text="{Binding PurchaseDateInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="8,0,0,0">
                            <TextBlock Text="Purchase Status" />
                            <TextBox Margin="0,4,0,0" Text="{Binding PurchaseStatusInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Product Name" />
                            <TextBox Margin="0,4,0,0" Text="{Binding PurchaseProductInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,8,0">
                            <TextBlock Text="Quantity" />
                            <TextBox Margin="0,4,0,0" Text="{Binding PurchaseQuantityInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="8,0,0,0">
                            <TextBlock Text="Price" />
                            <TextBox Margin="0,4,0,0" Text="{Binding PurchasePriceInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <TextBlock Margin="0,12,0,4" Text="Payment Mode" />
                    <TextBox Text="{Binding PurchasePaymentModeInput, UpdateSourceTrigger=PropertyChanged}" />

                    <Border Margin="0,14,0,0"
                            Padding="14"
                            CornerRadius="10"
                            Background="#F6F7F9"
                            BorderBrush="#E4E7EC"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Grand Total" Foreground="#6D7480" />
                            <TextBlock Margin="0,6,0,0"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Text="{Binding PurchaseInvoiceTotal, StringFormat={}{0:C0}}" />
                        </StackPanel>
                    </Border>

                    <DockPanel Margin="0,16,0,0">
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="16,10"
                                Content="Save &amp; Confirm"
                                Command="{Binding SavePurchaseInvoiceCommand}" />
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource OutlineButtonStyle}"
                                Padding="16,10"
                                Margin="0,0,8,0"
                                Content="Cancel"
                                Command="{Binding ClosePurchaseInvoiceCommand}" />
                    </DockPanel>
                </StackPanel>
            </Border>
        </Border>

        <Border Background="#77000000"
                Visibility="{Binding IsPurchaseReturnOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Width="980"
                    Padding="22"
                    CornerRadius="12"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Background="#FFFFFF">
                <StackPanel>
                    <DockPanel>
                        <TextBlock FontSize="30"
                                   FontWeight="Bold"
                                   Text="Create Purchase Return" />
                        <Button DockPanel.Dock="Right"
                                Width="32"
                                Height="32"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding ClosePurchaseReturnCommand}"
                                Content="✕" />
                    </DockPanel>

                    <Grid Margin="0,14,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Select Vendor" />
                            <TextBox Margin="0,4,0,0" Text="{Binding ReturnVendorNameInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,8,0">
                            <TextBlock Text="Original Invoice" />
                            <TextBox Margin="0,4,0,0" Text="{Binding ReturnInvoiceInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="8,0,0,0">
                            <TextBlock Text="Return Date" />
                            <TextBox Margin="0,4,0,0" Text="{Binding ReturnDateInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Return Quantity" />
                            <TextBox Margin="0,4,0,0" Text="{Binding ReturnQuantityInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Unit Price" />
                            <TextBox Margin="0,4,0,0" Text="{Binding ReturnUnitPriceInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <Border Margin="0,14,0,0"
                            Padding="14"
                            CornerRadius="10"
                            Background="#F6F7F9"
                            BorderBrush="#E4E7EC"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Total Refund" Foreground="#6D7480" />
                            <TextBlock Margin="0,6,0,0"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Text="{Binding PurchaseReturnTotal, StringFormat={}{0:C0}}" />
                        </StackPanel>
                    </Border>

                    <DockPanel Margin="0,16,0,0">
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="16,10"
                                Content="Finalize Return"
                                Command="{Binding SavePurchaseReturnCommand}" />
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource OutlineButtonStyle}"
                                Padding="16,10"
                                Margin="0,0,8,0"
                                Content="Cancel"
                                Command="{Binding ClosePurchaseReturnCommand}" />
                    </DockPanel>
                </StackPanel>
            </Border>
        </Border>

        <Border Background="#77000000"
                Visibility="{Binding IsPayBillOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Width="760"
                    Padding="22"
                    CornerRadius="12"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Background="#FFFFFF">
                <StackPanel>
                    <DockPanel>
                        <TextBlock FontSize="30"
                                   FontWeight="Bold"
                                   Text="Pay Bill" />
                        <Button DockPanel.Dock="Right"
                                Width="32"
                                Height="32"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding ClosePayBillCommand}"
                                Content="✕" />
                    </DockPanel>

                    <Grid Margin="0,14,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Select Vendor" />
                            <TextBox Margin="0,4,0,0" Text="{Binding PayBillVendorNameInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Invoice Number" />
                            <TextBox Margin="0,4,0,0" Text="{Binding PayBillInvoiceInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Payment Date" />
                            <TextBox Margin="0,4,0,0" Text="{Binding PayBillDateInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,8,0">
                            <TextBlock Text="Payment Mode" />
                            <TextBox Margin="0,4,0,0" Text="{Binding PayBillModeInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="8,0,0,0">
                            <TextBlock Text="Paying Amount" />
                            <TextBox Margin="0,4,0,0" Text="{Binding PayBillAmountInput, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <DockPanel Margin="0,16,0,0">
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="16,10"
                                Content="Save Payment"
                                Command="{Binding SavePayBillCommand}" />
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource OutlineButtonStyle}"
                                Padding="16,10"
                                Margin="0,0,8,0"
                                Content="Cancel"
                                Command="{Binding ClosePayBillCommand}" />
                    </DockPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
