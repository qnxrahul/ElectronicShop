<UserControl x:Class="ElectronicShop.Accounting.Desktop.Views.BillingInvoicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="6">
            <StackPanel>
                <TextBlock Style="{StaticResource PageTitleStyle}"
                           Text="Billing &amp; Invoice" />
                <TextBlock Margin="0,4,0,16"
                           Style="{StaticResource PageSubtitleStyle}"
                           Text="Manage bills and create sales invoices" />

                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,14">
                    <Button Content="Invoices"
                            Command="{Binding SelectInvoicesCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource TabButtonStyle}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Invoices">
                                        <Setter Property="Background" Value="#16191E" />
                                        <Setter Property="Foreground" Value="#FFFFFF" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Return &amp; Exchange"
                            Command="{Binding SelectReturnsCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource TabButtonStyle}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Return &amp; Exchange">
                                        <Setter Property="Background" Value="#16191E" />
                                        <Setter Property="Foreground" Value="#FFFFFF" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Completed"
                            Command="{Binding SelectCompletedCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource TabButtonStyle}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Completed">
                                        <Setter Property="Background" Value="#16191E" />
                                        <Setter Property="Foreground" Value="#FFFFFF" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <DockPanel Margin="0,0,0,12"
                           LastChildFill="False">
                    <StackPanel DockPanel.Dock="Left"
                                Orientation="Horizontal">
                        <Border Width="380"
                                Height="40"
                                CornerRadius="20"
                                Background="#FFFFFF"
                                BorderBrush="#DEE2E8"
                                BorderThickness="1">
                            <DockPanel Margin="12,0">
                                <TextBlock VerticalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"
                                           Foreground="#81868F"
                                           Text="&#xE721;" />
                                <TextBox Margin="8,0,0,0"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                            </DockPanel>
                        </Border>

                        <ComboBox Width="110"
                                  Height="40"
                                  Margin="10,0,0,0"
                                  VerticalContentAlignment="Center"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="All" />
                            <ComboBoxItem Content="Paid" />
                            <ComboBoxItem Content="Draft" />
                        </ComboBox>

                        <Button Width="40"
                                Height="40"
                                Margin="10,0,0,0"
                                Style="{StaticResource OutlineButtonStyle}"
                                Content="&#xE787;"
                                FontFamily="Segoe MDL2 Assets" />

                        <Button Width="40"
                                Height="40"
                                Margin="8,0,0,0"
                                Style="{StaticResource OutlineButtonStyle}"
                                Content="&#xE72C;"
                                FontFamily="Segoe MDL2 Assets" />
                    </StackPanel>

                    <Button DockPanel.Dock="Right"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Padding="16,10"
                            Command="{Binding OpenCreateInvoiceCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" />
                            <TextBlock Margin="8,0,0,0" Text="Create Invoice" />
                        </StackPanel>
                    </Button>
                </DockPanel>

                <Border Style="{StaticResource SurfaceCardStyle}">
                    <DataGrid Style="{StaticResource DataGridStyle}"
                              IsReadOnly="True"
                              ItemsSource="{Binding Invoices}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="S.No" Binding="{Binding SNo}" Width="0.6*" />
                            <DataGridTextColumn Header="Invoice No." Binding="{Binding InvoiceNumber}" Width="1*" />
                            <DataGridTextColumn Header="Customer Name" Binding="{Binding CustomerName}" Width="1.3*" />
                            <DataGridTextColumn Header="Phone No." Binding="{Binding PhoneNumber}" Width="1*" />
                            <DataGridTextColumn Header="Items" Binding="{Binding ItemCount}" Width="0.65*" />
                            <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat={}{0:C0}}" Width="1*" />
                            <DataGridTextColumn Header="Created By" Binding="{Binding CreatedBy}" Width="0.85*" />
                            <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate}" Width="1*" />
                            <DataGridTextColumn Header="Payment Type" Binding="{Binding PaymentType}" Width="0.9*" />
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="0.8*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Background="#77000000"
                Visibility="{Binding IsCreateInvoiceDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Width="700"
                    Padding="24"
                    CornerRadius="12"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Background="#FFFFFF">
                <StackPanel>
                    <DockPanel>
                        <TextBlock FontSize="36"
                                   FontWeight="Bold"
                                   Text="Create Invoice" />
                        <Button DockPanel.Dock="Right"
                                Width="32"
                                Height="32"
                                FontSize="14"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding CloseCreateInvoiceDialogCommand}"
                                Content="✕" />
                    </DockPanel>

                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                Margin="0,0,10,0"
                                Padding="16"
                                BorderBrush="#E4E7EC"
                                BorderThickness="1"
                                CornerRadius="10">
                            <StackPanel>
                                <TextBlock FontSize="16"
                                           FontWeight="Bold"
                                           Text="Edit Draft" />
                                <TextBlock Margin="0,8,0,14"
                                           Foreground="#6D7480"
                                           Text="Continue working on your last saved draft." />
                                <Button Style="{StaticResource OutlineButtonStyle}"
                                        Content="Resume Draft"
                                        Command="{Binding ResumeDraftCommand}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1"
                                Margin="10,0,0,0"
                                Padding="16"
                                BorderBrush="#E4E7EC"
                                BorderThickness="1"
                                CornerRadius="10">
                            <StackPanel>
                                <TextBlock FontSize="16"
                                           FontWeight="Bold"
                                           Text="Create New" />
                                <TextBlock Margin="0,8,0,14"
                                           Foreground="#6D7480"
                                           Text="Start a fresh invoice from scratch." />
                                <Button Style="{StaticResource PrimaryButtonStyle}"
                                        Content="Start Fresh"
                                        Command="{Binding StartFreshCommand}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>

        <Border Background="#77000000"
                Visibility="{Binding IsInvoiceEditorOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Width="1120"
                    Height="780"
                    Padding="16"
                    CornerRadius="12"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Background="#FFFFFF">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <TextBlock FontSize="32"
                                   FontWeight="Bold"
                                   Text="Create Invoice" />
                        <Button DockPanel.Dock="Right"
                                Width="32"
                                Height="32"
                                FontSize="14"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding CloseInvoiceEditorCommand}"
                                Content="✕" />
                    </DockPanel>

                    <Grid Grid.Row="1"
                          Margin="0,14,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0"
                                    Margin="0,0,10,0">
                            <TextBlock Text="Customer Name" />
                            <TextBox Margin="0,4,0,0"
                                     Text="{Binding InvoiceCustomerName, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1"
                                    Margin="0,0,10,0">
                            <TextBlock Text="Phone" />
                            <TextBox Margin="0,4,0,0"
                                     Text="{Binding InvoicePhoneNumber, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Type" />
                            <ComboBox Margin="0,4,0,0"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="Invoices" />
                                <ComboBoxItem Content="Return &amp; Exchange" />
                                <ComboBoxItem Content="Completed" />
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="2"
                            Padding="12"
                            BorderBrush="#D7DBE2"
                            BorderThickness="1"
                            CornerRadius="10"
                            Margin="0,0,0,10">
                        <DockPanel>
                            <TextBlock VerticalAlignment="Center"
                                       Foreground="#7C8390"
                                       Text="Scan barcode or type item name to add..." />
                            <Button DockPanel.Dock="Right"
                                    Style="{StaticResource OutlineButtonStyle}"
                                    Padding="10,6"
                                    Content="Enter" />
                        </DockPanel>
                    </Border>

                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="150" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Style="{StaticResource SurfaceCardStyle}"
                                Margin="0,0,0,10">
                            <DataGrid Style="{StaticResource DataGridStyle}"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding EditorItems}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" Binding="{Binding RowNumber}" Width="0.5*" />
                                    <DataGridTextColumn Header="CODE" Binding="{Binding Code}" Width="0.9*" />
                                    <DataGridTextColumn Header="ITEM DETAILS" Binding="{Binding ItemName}" Width="2*" />
                                    <DataGridTextColumn Header="QTY" Binding="{Binding Quantity}" Width="0.8*" />
                                    <DataGridTextColumn Header="RATE" Binding="{Binding Rate, StringFormat={}{0:C0}}" Width="0.9*" />
                                    <DataGridTextColumn Header="AMOUNT" Binding="{Binding Amount, StringFormat={}{0:C0}}" Width="1*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0"
                                    Style="{StaticResource SurfaceCardStyle}"
                                    Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock FontSize="24"
                                               FontWeight="Bold"
                                               Text="Payment Details" />
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,10,0,0">
                                        <Button Style="{StaticResource OutlineButtonStyle}"
                                                Margin="0,0,8,0"
                                                Content="Cash" />
                                        <Button Style="{StaticResource OutlineButtonStyle}"
                                                Margin="0,0,8,0"
                                                Content="Card" />
                                        <Button Style="{StaticResource OutlineButtonStyle}"
                                                Margin="0,0,8,0"
                                                Content="EFT" />
                                        <Button Style="{StaticResource OutlineButtonStyle}"
                                                Content="Split" />
                                    </StackPanel>
                                    <TextBox Margin="0,10,0,0"
                                             Text="{Binding InvoicePaymentType, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="1"
                                    Style="{StaticResource SurfaceCardStyle}"
                                    Margin="10,0,0,0">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock FontSize="16"
                                               Foreground="#6D7480"
                                               Text="{Binding InvoiceSubtotal, StringFormat=Subtotal: {0:C0}}" />
                                    <TextBlock Margin="0,8,0,0"
                                               FontSize="34"
                                               FontWeight="Bold"
                                               Text="{Binding InvoiceGrandTotal, StringFormat=Grand Total: {0:C0}}" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>

                    <DockPanel Grid.Row="4"
                               Margin="0,10,0,0">
                        <Button Style="{StaticResource OutlineButtonStyle}"
                                Padding="16,10"
                                Content="Save Draft"
                                Command="{Binding SaveDraftCommand}" />
                        <StackPanel Orientation="Horizontal"
                                    DockPanel.Dock="Right">
                            <Button Style="{StaticResource OutlineButtonStyle}"
                                    Padding="16,10"
                                    Margin="0,0,8,0"
                                    Content="Cancel"
                                    Command="{Binding CloseInvoiceEditorCommand}" />
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="16,10"
                                    Content="Save &amp; Print"
                                    Command="{Binding SaveInvoiceCommand}" />
                        </StackPanel>
                    </DockPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
